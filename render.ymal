services:
  - type: web
    name: thoughts-plans-api
    env: python
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn app:app -w 2 -b 0.0.0.0:$PORT
    envVars:
      - key: DATABASE_URL
        fromDatabase:
          name: thoughts-plans-db
          property: connectionString
      - key: API_KEY
        generateValue: true
databases:
  - name: thoughts-plans-db
    plan: free